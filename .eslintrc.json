{
  "extends": "airbnb",
  "plugins": [
    "jsx-a11y",
    "react",
    "jest"
  ],
  "parser": "babel-eslint",
  "globals": {
    "fetch": false,
    "navigator": false
  },
  "env": {
    "jest/globals": true
  },
  "rules": {
    "react/prefer-stateless-function": "off",
    "react/jsx-filename-extension": "off",
    "react/prop-types": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_value"
        ]
      }
    ],
    "import/prefer-default-export": "off",
    "max-len": [
      "error",
      {
        "code": 140
      }
    ]
  }
}